<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout tools:context=".MainActivity" android:background="@drawable/bg1" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.257"
        app:srcCompat="@drawable/logo" />


    <EditText android:layout_height="wrap_content" android:layout_width="300dp" app:layout_constraintVertical_bias="0.053" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/Roll_No" app:layout_constraintTop_toBottomOf="@id/imageView" android:textColorHint="#fcfcf7" android:textColorHighlight="#0B0A0A" android:textColor="#F6EEEE" android:inputType="number" android:hint="Roll Number" android:fontFamily="sans-serif-smallcaps" android:ems="10" android:drawableLeft="@drawable/ic_action_name" android:backgroundTint="#97968F"/>

    <EditText android:layout_height="wrap_content" android:layout_width="300dp" app:layout_constraintVertical_bias="0.221" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/password" app:layout_constraintTop_toBottomOf="@id/imageView" android:textColorHint="#fcfcf7" android:textColorHighlight="#0B0A0A" android:textColor="#F6EEEE" android:inputType="textPassword" android:hint="Password" android:fontFamily="sans-serif" android:ems="10" android:drawableLeft="@drawable/ic_action_lock" android:backgroundTint="#97968F"/>

    <Button android:background="#F1F187" android:layout_height="wrap_content" android:layout_width="100dp" app:layout_constraintVertical_bias="0.14" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/btn_login" app:layout_constraintTop_toBottomOf="@+id/password" app:layout_constraintHorizontal_bias="0.901" android:textStyle="bold" android:textSize="18sp" android:text="LOG IN"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintVertical_bias="0.831" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/registerview" app:layout_constraintTop_toBottomOf="@id/btn_login" android:textColor="#B6AEAE" android:fontFamily="sans-serif-smallcaps" android:backgroundTint="#FFFFFF" app:layout_constraintHorizontal_bias="0.897" android:textSize="18sp" android:text="Register here" android:layout_marginTop="18dp"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="67dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/cbitlogo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>